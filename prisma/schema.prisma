// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

model Insurance {
  id                  Int    @id @default(autoincrement())
  nameOfAssured       String
  address             String
  issueDate           String
  MVFileNumber        String
  COCNumber           String
  expiryDate          String
  inceptionDate       String
  MakeOrDescription   String
  UnitTypeORBodytType String
  YearModel           String
  color               String
  EngineOrmotorNumber String
  ChassisNumber       String
  PlateNumber         String
  unitPrice           Float
  MortgageFinancing   String
  user                User   @relation(fields: [userId], references: [id])
  userId              String @unique
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  password      String
  insuranceType String?
  insurance     Insurance?
  payment       Payment?
}

model Payment {
  id                       String @id @default(cuid())
  code                     String
  deductible               Float
  towing                   Float
  repLim                   Float
  coverages_TPL            Float
  coverages_lossAndDamage  Float
  coverages_bodilyInjury   Float
  coverages_propertyDamage Float
  coverages_APPA           Float
  coverages_AOG            Float?
  premiums_TPL             Float
  premiums_lossAndDamage   Float
  premiums_bodilyInjury    Float
  premiums_propertyDamage  Float
  premiums_APPA            Float
  premiums_AOG             Float?
  docStamps                Float
  VAT                      Float
  LGT                      Float
  otherCharges             Float
  user                     User   @relation(fields: [userId], references: [id])
  userId                   String @unique
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
